package com.airlinecheckin.io.airlinecheckin.service;

import java.util.ArrayList;
import java.util.Arrays;
import java.util.List;

import com.airlinecheckin.io.airlinecheckin.model.FlightDetails;

public class FlightDetailsService {
	
	private List<FlightDetails> passengerDetails = new ArrayList<>(Arrays.asList(
			new FlightDetails("123456", "SCA-127", "PUNE", "NAGPUR"),
			new FlightDetails("123456", "SCA-127", "PUNE", "NAGPUR")
			));
	
	public PassengerDetails getPassengerDetails(String confirmationNo){
		return passengerDetails.stream().filter(t -> t.getConfirmationNo().equals(confirmationNo)).findAny().get(); // I have used Lambda expression here
	}

}
